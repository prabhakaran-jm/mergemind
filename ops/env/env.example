# MergeMind Environment Configuration
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
API_PORT=8080
UI_PORT=5173

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
BQ_DATASET_RAW=mergemind_raw
BQ_DATASET_MODELED=mergemind
VERTEX_LOCATION=us-central1

# GitLab Configuration
GITLAB_BASE_URL=https://gitlab.com
GITLAB_TOKEN=your-gitlab-token

# Slack Bot Configuration
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_COMMAND=/mergemind

# API Configuration
API_BASE_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080

# Optional: Database URLs (if using external databases)
# DATABASE_URL=postgresql://user:password@localhost/mergemind

# Optional: Redis URL (for caching)
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=INFO
